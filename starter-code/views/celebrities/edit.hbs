<h2>Edit info about {{name}}</h2>

<form action="/celebrities/{{_id}}" method=POST>
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="{{name}}" required>  
    </div>
   
    <div>
        <label for="occupation">Ocuppation</label>
        <input type="text" name="occupation" id="occupation" value="{{occupation}}" required>  
    </div>
   
    <div>
        <label for="catchPhrase">Catch phrase</label>
        <input type="text" name="catchPhrase" id="catchPhrase" value="{{catchPhrase}}" required>    
    </div>
    
    <button type="submit">Edit celebrity</button>
</form>